function base32_decode($input)
{
	$base32 = "ABCDEFGHIJKLMNOPQRSTUVWXYZ234567";

	$b = 0;
	$v = 0;
	$result = "";

	$i = 0;
	$l = length($input);
	while ($i < $l)
	{
		if ($input[$i] == "=")
			break;

		$char = str_find($base32, $input[$i]);
		if ($char == -1)
			return;

		$v = ($v << 5) | $char;
		$b += 5;

		if ($b >= 8)
		{
			$result .= chr(($v >> ($b - 8)) & 0xff);
			$b -= 8;
		}
		$i += 1;
	}

	return $result;
}

// urlencoding according to rfc3986

function urlencode($string)
{
	$ok = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-_.~";
	$result = "";
	$i = 0;
	$len = strlen($string);
	while ($i < $len)
	{
		$c = $string[$i];
		if (str_find($ok, $c) >= 0)
			$result .= $c;
		else
			$result .= "%".unpack("H2", $c)[0];
		$i += 1;
	}
	return $result;
}
